[user]
	email = tstrul@gmeil.com
	name = Tzachi Strul
[credential]
	helper = cache --timeout=3600
[push]
    default = current
[core]
	editor = vim
[diff "sopsdiffer"]
	textconv = sops -d
[alias]
    # Amend last commit without modifying commit message
    amend = "!git log -n 1 --pretty=tformat:%s%n%n%b | git commit -F - --amend"
    a = commit --amend
    u = commit --amend --no-edit
[core]
	excludesfile = /Users/tzachis/.gitignore_global
